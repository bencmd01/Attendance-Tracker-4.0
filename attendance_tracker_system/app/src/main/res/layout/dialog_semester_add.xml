<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/semesterAddBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Footprints"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Add Semester"/>

    <EditText
        android:id="@+id/semesterAddSemesterName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Semester Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Footprints"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/semesterAddCourseName1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Course Title"
        android:textSize="18sp"
        android:textColor="@color/Footprints"/>

    <EditText
        android:id="@+id/semesterAddCourseName2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Course Title"
        android:textSize="18sp"
        android:textColor="@color/Footprints"/>

    <EditText
        android:id="@+id/semesterAddCourseName3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Course Title"
        android:textSize="18sp"
        android:textColor="@color/Footprints"/>

    <EditText
        android:id="@+id/semesterAddCourseName4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Course Title"
        android:textSize="18sp"
        android:textColor="@color/Footprints"/>

    <EditText
        android:id="@+id/semesterAddCourseName5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Course Title"
        android:textSize="18sp"
        android:textColor="@color/Footprints"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/semesterAddAcceptButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/Footprints"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/semesterAddCancelButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/Footprints"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


</LinearLayout>