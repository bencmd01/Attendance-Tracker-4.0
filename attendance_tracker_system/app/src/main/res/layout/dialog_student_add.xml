<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/studentAddBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Footprints"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Add Student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/studentFirstNameAdd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Student First Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentAddBanner"
        />
    <EditText
        android:id="@+id/studentLastNameAdd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Student Last Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentFirstNameAdd"
        />
    <EditText
        android:id="@+id/studentEmailAdd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Student Email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentLastNameAdd"
        />

    <LinearLayout
        android:id="@+id/studentAddButtonBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/studentEmailAdd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/studentAddAcceptButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/Footprints"
            android:textSize="15sp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/studentAddCancelButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/Footprints"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>