<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/border"
    android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
                <TextView
                    android:id="@+id/semesterListName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/Footprints"
                    android:textSize="35sp"
                    />

                <Button
                    android:id="@+id/semesterListButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Edit"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:tooltipText="Change the semester name or delete this semester and its contents."
                    />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/semesterCourseChildRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="5dp"/>


</LinearLayout>